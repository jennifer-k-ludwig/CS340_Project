<h2 align="center">User Settings</h2>
<form id="user_info" align="center" action="/user" method="post">
	<label> First Name: <input name="first_name" type="text"></label><br>
	<label> Last Name: <input name="last_name" type="text"></label><br>
	<label> Birth Date: <input name="birth_date" type="date"></label><br>
	<label> Max Calories per Day: <input name="max_calories" type="number"></label><br>
	<label> Email Address: <input name="email_address" type="email"></label><br>			
	<label> Password: <input name="password" type="password"></label><br>
	Dietary Preferences:<br>
	<label> No Meat <input name="no_meat_check" type="checkbox"></label><br>	
	<input type="hidden" name="no_meat" value="false">
	
	<label> No Dairy <input name="no_dairy_check" type="checkbox"></label><br>
	<input type="hidden" name="no_meat" value="false">	
	
	<label> No Nuts <input name="no_nuts_check" type="checkbox"></label><br>	
	<input type="hidden" name="no_nuts" value="false">
	
	<label> No Shellfish <input name="no_shellfish_check" type="checkbox"></label><br>
	<input type="hidden" name="no_shellfish" value="false">	
	
	<label> No Carbs <input name="no_carbs_check" type="checkbox"></label><br>	
	<input type="hidden" name="no_carbs" value="false">
	
	<label> No Animal Products <input name="no_animal_products_check" type="checkbox"></label><br>
	<input type="hidden" name="no_animal_products" value="false">
	
	<label> No Gluten <input name="no_gluten_check" type="checkbox"></label><br>	
	<input type="hidden" name="no_gluten" value="false">
	
	<label> No Soy <input name="no_soy_check" type="checkbox"></label><br>
	<input type="hidden" name="no_soy" value="false">
	
	<input type="submit" value="Save Changes" >
</form>

<form id="user_delete" align="center">
	<input type="submit" value="Delete Account">
</form >
