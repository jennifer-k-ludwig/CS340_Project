</div>

<h2 align="center">Your diet selections...</h2>
	<table align="center">
		<thead>
			<th>Diet ID</th>
			<th>No Meat</th>
			<th>No Dairy</th>
			<th>No Nuts</th>
			<th>No Shellfish</th>
			<th>No Carbs</th>
			<th>No Animal Products</th>
			<th>No Gluten</th>
			<th>No Soy</th>  
		</thead> 

		<tbody>
			{{#each diet}}
			<tr>
				<td>{{diet_id}}</td>
				<td>{{diet_no_meat}}</td>
				<td>{{diet_no_dairy}}</td>
				<td>{{diet_no_nuts}}</td>
				<td>{{diet_no_shellfish}}</td>
				<td>{{diet_no_carbs}}</td>
				<td>{{diet_no_animal_products}}</td>
				<td>{{diet_no_gluten}}</td>
				<td>{{diet_no_soy}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>

