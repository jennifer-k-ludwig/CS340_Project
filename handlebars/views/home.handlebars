<h2 align="center">Your recipes...</h2>

	<table align="center">
		<thead>
			<th>Recipe ID</th>
			<th>Recipe Name</th>
		</thead>

		<tbody>
			{{#each recipes}}
			<tr>
				<td>{{recipe_id}}</td>
				<td>{{recipe_name}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>